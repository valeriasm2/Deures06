<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exercici0601.ControllerItem">
    <!-- Se ajustan los tamaÃ±os del AnchorPane para que se adapte al contenido -->
    <children>
        <HBox layoutX="3.0" layoutY="5.0" prefHeight="40.0" prefWidth="200.0">
            <children>
                <!-- Imagen del personaje -->
                <ImageView fx:id="imageCharacters" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
                <!-- Nombre del personaje -->
                <Text fx:id="nameCharacter" strokeType="OUTSIDE" strokeWidth="0.0" text="NAME" wrappingWidth="140.0">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Text>
            </children>
        </HBox>
        
        <!-- Nombre del juego -->
        <Text fx:id="game" layoutX="38.0" layoutY="38.0" strokeType="OUTSIDE" strokeWidth="0.0" text="GAME">
            <font>
                <Font size="10.0" />
            </font>
        </Text>
    </children>
</AnchorPane>
